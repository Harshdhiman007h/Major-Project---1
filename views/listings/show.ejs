
<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>Listing details</h2><br>
    <div class="card-edit col-6 mb-2">
        <img src="<%=listing.image.url%>" class="card-img-top card-pic" alt="image">
        <div class="card-body" style="width: 30rem">
            <br>
            <p class="card-text">
                <%=listing.title%><br>
                <%=listing.description%><br>
                &#x20b9 <%=listing.price.toLocaleString("en-IN")%><br>
                <%=listing.location%><br>
                <%=listing.country%><br>
            </p>
        </div>
    </div>
</div>
</div>
<br>
<div class="btns d-flex offset-2">
  <a class="btn btn-dark add-btn me-3" href="/listing/<%=listing._id%>/edit">Edit</a>
  <form method="GET" action="/listing/<%=listing._id%>/delete">
    <button class="btn btn-dark">Delete</button>
  </form>
</div>
<br>